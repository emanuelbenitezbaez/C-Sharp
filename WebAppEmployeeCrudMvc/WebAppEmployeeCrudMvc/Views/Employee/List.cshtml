
@{
}
@model List<WebAppEmployeeCrudMvc.Models.Employee>;

	<div class="row">
		<div class="col-sm-8 offset-sm-2">

		<h2>Employee List</h2>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Full name</th>
					<th>Email</th>
					<th>Contract Date</th>
					<th>Active</th>
					<th></th>
				
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.IdEmployee</td>
						<td>@item.FullName</td>
						<td>@item.Email</td>
						<td>@item.ContractDate</td>
						<td>@item.Active</td>
						
						<td>
							<a asp-action="Edit" asp-route-id="@item.IdEmployee">Edit</a> |
							<a asp-action="Details" asp-route-id="@item.IdEmployee">Details</a> |
							<a asp-action="Delete" asp-route-id="@item.IdEmployee">Delete</a>
						</td>
					</tr>
				}
			</tbody>

		</div>

	</div>